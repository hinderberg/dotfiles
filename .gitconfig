[merge]
	tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED

[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[includeIf "gitdir:~/coding-personal/"]
path = ~/coding-personal/.gitconfig.personal

[includeIf "gitdir:~/conding-work/"]
path = ~/coding-work/.gitconfig.work

[core]
excludesfile = ~/.gitignore      # valid everywhere